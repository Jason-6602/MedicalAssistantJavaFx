<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.medicalassistantjavafx.SpeakToDoctor"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="10">
        <Label text="Reason for Visit:" />
        <TextField fx:id="reasonForVisitField" />

        <Label text="Symptoms:" />
        <TextField fx:id="symptomsField" />

        <Label text="Diagnostic:" />
        <TextField fx:id="diagnosticField" />

        <Label text="Lab Report:" />
        <TextField fx:id="labReportField" />

        <Button text="Speak to Doctor" onAction="#handleSpeakToDoctor" />
    </VBox>

</AnchorPane>
